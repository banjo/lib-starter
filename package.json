{
    "name": "pkg-name",
    "type": "module",
    "version": "0.0.0",
    "private": false,
    "description": "",
    "author": "Anton Ã–dman <anton.odman@gmail.com>",
    "license": "MIT",
    "homepage": "https://github.com/banjo/pkg-name#readme",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/banjo/pkg-name.git"
    },
    "bugs": "https://github.com/banjo/pkg-name/issues",
    "keywords": [],
    "sideEffects": false,
    "main": "dist/index.js",
    "module": "dist/index.js",
    "types": "dist/index.d.ts",
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "require": "./dist/index.cjs",
            "import": "./dist/index.js"
        }
    },
    "files": [
        "dist/*"
    ],
    "scripts": {
        "build": "tsup",
        "dev": "tsup --watch",
        "lint": "eslint --ext .js,.ts,.json . --fix",
        "prepublishOnly": "nr build",
        "release": "bumpp && npm publish",
        "start": "esno src/index.ts",
        "test": "vitest --watch=false",
        "test:dev": "vitest",
        "typecheck": "tsc --noEmit",
        "format": "prettier --write ."
    },
    "devDependencies": {
        "@antfu/ni": "^0.19.0",
        "@banjoanton/eslint-config": "^0.1.1",
        "@banjoanton/prettier-config": "^0.0.8",
        "@banjoanton/utils": "^0.1.17",
        "@types/node": "^18.11.18",
        "bumpp": "^8.2.1",
        "eslint": "^8.32.0",
        "esno": "^0.16.3",
        "git-install-hook": "^0.0.3",
        "lint-staged": "^13.1.2",
        "pnpm": "^7.26.1",
        "prettier": "^2.8.3",
        "simple-git-hooks": "^2.8.1",
        "tsup": "^6.5.0",
        "typescript": "^4.9.4",
        "vite": "^4.0.4",
        "vitest": "^0.28.3"
    },
    "prettier": "@banjoanton/prettier-config",
    "simple-git-hooks": {
        "pre-commit": "pnpm exec lint-staged",
        "post-checkout": "pnpm exec git-install-hook",
        "post-merge": "pnpm exec git-install-hook"
    },
    "lint-staged": {
        "*": [
            "prettier --write --ignore-unknown",
            "eslint --fix"
        ]
    }
}
